@model MVC_project.Models.MOVIES

@{
    ViewBag.Title = "ManagingPrices";
}
<link rel="stylesheet" type="text/css" href="~/Content/Background.css" />
<h2>Managing Prices</h2>
@using (Html.BeginForm("ManagingPrices", "Admin"))
{
    <div class="form-horizontal">
        <h4>MOVIES</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.NAME, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.NAME, ViewBag.movies as SelectList, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" onclick="SendData()" class="btn btn-default" />
            </div>
        </div>

    </div>
}

